{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dictea",
  "version": "0.2.0",
  "identifier": "com.dictea.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Dictea - Parameters",
        "width": 780,
        "height": 520,
        "resizable": true,
        "center": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "minWidth": 700,
        "minHeight": 450,
        "visible": true
      },
      {
        "label": "overlay",
        "title": "Dictea",
        "width": 140,
        "height": 44,
        "resizable": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYwMDY4N0RFQjAyNjRBMDYKUldRR1NpYXczb2NHWUEwUVRoYXd5QTdzSFkvdGpKTFlWMEJtelJ6V3RDeHh4Vmg0QmFXNDhnTGcK",
      "endpoints": [
        "https://github.com/furybee/dictea/releases/latest/download/latest.json"
      ]
    }
  }
}
